{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/savedSearches",
      "apiVersion": "2020-08-01",
      "name": "[concat(parameters('workspace'), '/MDE_T1036.004')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "eTag": "*",
        "displayName": "Masqueraded task or service",
        "category": "Hunting Queries",
        "query": "\nAlertInfo\n| where AttackTechniques contains \"T1036.004\"\n",
        "version": 1,
        "tags": [
          {
            "name": "description",
            "value": "This hunting query helps identify new, and potentially unapproved applications or bots being added to Teams."
          },
          {
            "name": "tactics",
            "value": "DefenseEvasion"
          },
          {
            "name": "relevantTechniques",
            "value": "T1036.004"
          }
        ]
      }
    }
  ]
}